<div class="card-body" style="color: #854d77;">
    <h3>Posts!</h3>
</div>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <hr>
        <a href="/postagem/{{slug}}"><button class="btn btn-success" style="background-color: #8a5a8a;">Continue...</button></a>
        <br>
        <small>Data de Pulblicação: {{data}}</small>

    </div>
</div>
{{else}}

<h5>Nenhum Post</h5>

{{/each}}