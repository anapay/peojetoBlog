<div class="card">
    <div class="card-body">
        <h4>Novo Post: </h4>
        <form action="">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Contéudo</label>
            <textarea name="conteudo" id="" cols="30" rows="10" class="form-control"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" style="background-color: #70414f;" type="submit">Criar
                Postagem</button>
        </form>
    </div>
</div>